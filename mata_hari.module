        'title' => t('View log'),
        'page callback' => 'mata_hari_info_view_type',
        'page arguments' => array(1),
        'access arguments' => array('view mata_hari_info'),
        'file' => 'include/mata_hari.view.type.inc',
    );
    return $items;
}

